{
  "git": {
    "commitMessage": "build: release v${version}"
  },
  "github": {
    "release": true,
    "releaseName": "v${version}"
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "gitmoji",
      "infile": "CHANGELOG.md",
      "header": "# Changelog"
    }
  }
}
